{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capability for Mokuro Reader",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:window:allow-set-cursor-grab",
    "shell:allow-open",
    "deep-link:default",
    "dialog:default",
    "fs:default",
    {
      "identifier": "fs:allow-read-file",
      "allow": [{ "path": "**" }]
    },
    {
      "identifier": "fs:allow-read-dir",
      "allow": [{ "path": "**" }]
    },
    {
      "identifier": "fs:allow-stat",
      "allow": [{ "path": "**" }]
    },
    {
      "identifier": "fs:scope",
      "allow": [{ "path": "$HOME/**" }, { "path": "$DOWNLOAD/**" }, { "path": "$DOCUMENT/**" }, { "path": "/**" }]
    }
  ]
}
